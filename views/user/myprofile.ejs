<script>
function showTab(tabId, event) {
  if (event) event.preventDefault(); // Prevents page refresh

  document.querySelectorAll('.profile-tab-content').forEach(tab => tab.classList.remove('active'));
  document.querySelectorAll('.profile-tab-button').forEach(button => button.classList.remove('active'));

  document.getElementById(tabId).classList.add('active');
  document.querySelector(`[onclick="showTab('${tabId}')"]`).classList.add('active');
}
function changePage(event, pageNumber) {
    event.preventDefault(); // Prevent default link behavior
    // Fetch new page content dynamically using AJAX or replace `window.location.href`
    window.location.href = `?page=${pageNumber}&limit=<%= limit %>`;
}
</script>
