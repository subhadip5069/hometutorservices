<!-- Counter Animation Script -->
<script>
    $(document).ready(function () {
        function animateCount(element, start, end, duration) {
            $({ count: start }).animate({ count: end }, {
                duration: duration,
                easing: 'swing',
                step: function () {
                    $(element).text(Math.floor(this.count).toLocaleString());
                },
                complete: function () {
                    $(element).text(end.toLocaleString() + "+");
                }
            });
        }

        // Trigger animation when the card comes into view
        function startCounting() {
            animateCount("#homeTutorsCount", 0, 800000, 2000);  // 8,00,000+
            animateCount("#tuitionJobsCount", 0, 600000, 2000); // 6,00,000+
        }

        // Check if element is in viewport
        function isElementInViewport(el) {
            let rect = el.getBoundingClientRect();
            return rect.top >= 0 && rect.bottom <= (window.innerHeight || document.documentElement.clientHeight);
        }

        $(window).on('scroll', function () {
            if (isElementInViewport(document.querySelector('.custom-block'))) {
                startCounting();
                $(window).off('scroll'); // Run once
            }
        });
    });
</script>

