<div class="registration-form-heading">
    <h2>Connecting Students with the Best Tutors – Learn & Grow Together!</h2>
</div>
<div class="registration-form-content-sec">
    <div class="reg-form-images">
        <img src="/user/images/teacher[1].jpg" alt="picture">
    </div>
    <div class="tuition-reg-container">
        <div class="tuition-reg-toggle">
            <h2>I am</h2>
            <input type="radio" id="student-radio" name="userType" value="student" checked>
            <label for="student-radio">Student/Parent</label>
    
            <input type="radio" id="tutor-radio" name="userType" value="tutor">
            <label for="tutor-radio">Tutor</label>
        </div>
    
        <!-- Bootstrap Toast Container -->
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <% if (message) { %>
                <div id="liveToast" class="toast align-items-center text-bg-<%= message.type %> border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <%= message.text %>
                        </div>
                        <button type="button" class="btn-close me-2 m-auto" style="width: 10px;" data-bs-dismiss="toast" aria-label="Close">X</button>
                    </div>
                </div>
            <% } %>
        </div>
    
        <!-- Bootstrap Script for Auto-Showing Toast -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var toastEl = document.getElementById("liveToast");
                if (toastEl) {
                    var toast = new bootstrap.Toast(toastEl);
                    toast.show();
                }
            });
        </script>
    
        <!-- Student Signup Form -->
        <form id="studentSignupForm" action="/auth/signup" method="post" enctype="multipart/form-data">
            <div id="studentForm" class="tuition-reg-form-section tuition-reg-active">
                <h1>Find the perfect tutor for your child!</h1>
                <input type="text" placeholder="Name" name="name" required>
                <input type="number" placeholder="Mobile Number" name="phone" required>
                <input type="email" placeholder="Enter Email" name="email" required>
    
                <div class="password-container">
                    <input type="password" class="password-input" placeholder="Enter Password" name="password" required>
                    <span class="toggle-password">🔒</span>
                </div>
    
                <div class="password-container">
                    <input type="password" class="password-input" placeholder="Confirm Password" name="password2" required>
                    <span class="toggle-password">🔒</span>
                </div>
    
                <input type="hidden" name="role" value="student">
    
                <div class="checkbox-container">
                    <input type="checkbox" id="terms-student" required>
                    <label for="terms-student">By Signing up you agree to our <a href="/terms&condition">Terms & Conditions</a></label>
                </div>
    
                <button type="submit">Submit</button>
                <p>Already a member? <a href="/login">Login</a></p>
            </div>
        </form>
    
        <!-- Tutor Signup Form -->
        <form id="tutorSignupForm" action="/auth/signup" method="post" enctype="multipart/form-data">
            <div id="tutorForm" class="tuition-reg-form-section">
                <h1>Connect with students & start teaching!</h1>
                <input type="text" placeholder="Name" name="name" required>
                <input type="number" placeholder="Mobile Number" name="phone" required>
                <input type="email" placeholder="Enter Email" name="email" required>
    
                <div class="password-container">
                    <input type="password" class="password-input" placeholder="Enter Password" name="password" required>
                    <span class="toggle-password">🔒</span>
                </div>
    
                <div class="password-container">
                    <input type="password" class="password-input" placeholder="Confirm Password" name="password2" required>
                    <span class="toggle-password">🔒</span>
                </div>
    
                <input type="hidden" name="role" value="tutor">
                <input type="file" name="profileImage" id="tutorProfileImage" accept="image/*">
                <p>Upload your profile picture</p>
                <img id="tutorImagePreview" src="" alt="Profile Preview" style="display: none; width: 100px; height: 100px; border-radius: 50%; object-fit: cover;">
                <script>
                    $(document).ready(function () {
                        $("#tutorProfileImage").on("change", function (event) {
                            let file = event.target.files[0];
                
                            if (file) {
                                let reader = new FileReader();
                                reader.onload = function (e) {
                                    $("#tutorImagePreview").attr("src", e.target.result).show();
                                };
                                reader.readAsDataURL(file);
                            } else {
                                $("#tutorImagePreview").hide();
                            }
                        });
                    });
                </script>
                                
                <div class="checkbox-container">
                    <input type="checkbox" id="terms-tutor" required>
                    <label for="terms-tutor">By Signing up you agree to our <a href="/terms&condition">Terms & Conditions</a></label>
                </div>
               
                
    
                <button type="submit">submit</button>
                <p>Already a member? <a href="/login">Login</a></p>
            </div>
        </form>
    
        <!-- Inline CSS -->
        <style>
            .tuition-reg-form-section {
                display: none; /* Hide all forms initially */
            }
    
            .tuition-reg-active {
                display: block; /* Only active form should be shown */
            }
    
            .password-container {
                position: relative;
                display: flex;
                align-items: center;
            }
    
            .toggle-password {
                cursor: pointer;
                margin-left: -25px;
                user-select: none;
            }
        </style>
    
        <!-- jQuery Script -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                // Show student form by default
                $("#studentForm").show();
    
                // Password visibility toggle
                $(".toggle-password").click(function () {
                    let input = $(this).prev("input"); // Select the correct password input field
                    if (input.attr("type") === "password") {
                        input.attr("type", "text");
                        $(this).text("🔓"); // Change icon to open lock
                    } else {
                        input.attr("type", "password");
                        $(this).text("🔒"); // Change icon to locked
                    }
                });
    
                // Toggle between student and tutor forms
                $("input[name='userType']").on("change", function () {
                    if ($("#student-radio").is(":checked")) {
                        $("#studentForm").show().addClass("tuition-reg-active");
                        $("#tutorForm").hide().removeClass("tuition-reg-active");
                    } else if ($("#tutor-radio").is(":checked")) {
                        $("#tutorForm").show().addClass("tuition-reg-active");
                        $("#studentForm").hide().removeClass("tuition-reg-active");
                    }
                });
            });
        </script>
