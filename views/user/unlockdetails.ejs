<!-- main section -->
<style>
     .tutor-container {
    max-width: 1250px;
    background: white;
    margin: 20px auto;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

.tutor-header-profile {
    display: flex;
    flex-wrap: wrap;
    justify-content: stretch;
    margin-top: 20px;
    margin-bottom: 20px;
    align-items: center;
    
}

.profilepicture img {
    max-width: 100px;
    margin-left: 74%;
}
.tutor-header img {
    max-width: 100px;
   
}

.tutor-header {
    text-align: left;
}

.tutor-info {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    /* margin-top: 20px; */
}

.tutor-details, .contact-info {
    width: 47%;
}

.contact-info {
    text-align: center;
    background: #f1f1f1;
    padding: 15px;
    border-radius: 10px;
    height: 100%;
    margin-top: 2%;
}

.contact-info-btn {
    background-color: #ffc107;
    color: white;
    padding: 10px;
    border: none;
    margin: 5px;
    cursor: pointer;
    border-radius: 5px;
}

.tabs {
    margin-top: 20px;
    display: flex;
    border-bottom: 2px solid #ddd;
}

.tab-button {
    padding: 10px 20px;
    border: none;
    background: #f5f5f5;
    cursor: pointer;
    font-weight: bold;
    flex: 1;
}

.tab-button.active {
    background: #007bff;
    color: white;
}

.tab-content {
    display: none;
    padding: 15px;
}

.tab-content.active {
    display: block;
}
.registration-form-heading h2 {
    font-size: 25px;
    color: black;
}
.tutor-container h1 {
    font-size: 3vh;
    color: black;
}
.tutor-container p {
    color: black;
    font-size: 17px;
    
}
.tutor-container h2 {
    font-size: 25px;
    color: black;
}
.tutor-container h3 {
    font-size: 25px;
    color: black;
}
.status-indicator {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: inline-block; /* Keeps it inline with the text */
    background-color: grey; /* Default inactive color */
    margin-left: 5px; /* Adds spacing between text and indicator */
    vertical-align: middle; /* Aligns it properly with the text */
}

/* Active Status */
.status-indicator.active {
    background-color: green;
}

/* Inactive Status */
.status-indicator.inactive {
    background-color: grey;
}




/* Responsive */
@media (max-width: 600px) {
    .tutor-info {
        flex-direction: column;
        align-items: center;
    }
    .tutor-details, .contact-info {
        width: 100%;
    }
}
      
        
</style>
