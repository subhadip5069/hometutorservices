<%- include('layout/navbar') %>
<style>


    /* category page css */
    
    .category-section {
      font-family: Arial, sans-serif;
      background-color: #ffffff;
      display: flex;
      /* justify-content: center; */
      align-items: center;
      /* height: 100vh; */
      margin: 0;
      padding: 50px 0 50px 50px;
    }
    
    .category-container {
      display: flex;
      gap: 20px;
      align-items: flex-start;
      max-width: 1200px;
      width: 100%;
    }
    
    /* Filter Section */
    .category-filter-container {
      background-color: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      width: 280px;
    }
    
    .category-filter-title {
     
      color: white;
      
      text-align: center;
      width: 136px;
     
    }
    .category-filter-search h3 {
      font-size: large;
      margin: 3px;
    }
    .category-text p {
      /* all: unset; */
      color: black;
      margin: 0;
      width: 260px;
      font-size: 15px;
    }
    
    .category-filter-group {
      margin-bottom: 15px;
    }
    
    .category-filter-group label {
      font-weight: bold;
      display: block;
      margin-bottom: 5px;
      margin-top: 5px;
    }
    
    .category-filter-group input[type="text"] {
      width: 98%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    
    .category-filter-options input {
      margin-right: 5px;
    }
    
    /* Profile Cards Section */
    .category-card-section {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      /* flex-wrap: wrap; */
      gap: 20px;
      max-width: 1000px;
    }
    
    .category-card {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      padding: 20px;
      width: 367px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    
    .category-card-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .category-text {
      flex: 1;
    }
    
    .category-title {
      font-size: 14px;
      color: #888;
    }
    
    .category-name {
      font-size: 18px;
      margin: 5px 0;
    }
    
    .category-image img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
    }
    
    .category-card-footer {
      margin-top: 15px;
      display: flex;
      /* justify-content: space-between; */
    }
    
    .category-btn {
      border: none;
      padding: 8px 12px;
      border-radius: 5px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .category-btn.profile {
      background-color: #007bff;
      color: white;
    }
    .category-filter-group-gender {
    margin-bottom: 10px;
    }
    .category-filter-group-exp {
    margin-bottom: 10px;
    }
    .category-filter-group-exp label{
    margin-bottom: 5px;
    }
    .category-filter-search {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: #2c72a5;
      color: white;
      padding: 10px;
      border: none;
      width: 100%;
      cursor: pointer;
      border-radius: 10px;
    }
    .card img {
      width: 70%;
      align-self: center;
    }
    /* Responsive Design */
    @media (max-width: 1200px) {
      .category-container {
          flex-direction: row;
          /* align-items: center; */
      }
      .category-filter-container {
          width: 100%;
          max-width: 500px;
      }
      .category-card-section {
          grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 992px) {
      .category-section {
          padding: 30px 15px;
      }
      .category-card-section {
          grid-template-columns: repeat(2, 1fr);
          gap: 15px;
      }
      .category-card {
          width: 100%;
      }
      
    }
    
    @media (max-width: 768px) {
      .category-card-section {
          grid-template-columns: repeat(2, 1fr);
      }
      .category-card {
          width: 100%;
      }
      .category-filter-container {
          width: 100%;
          padding: 10px;
      }
      .category-filter-group label,
      .category-filter-group-exp label {
          font-size: 14px;
      }
    }
    
    @media (max-width: 576px) {
      .category-filter-container {
          width: 88%;
          margin-top: 10px;
          padding: 10px;
      }
      .category-filter-group input[type="text"] {
          width: 100%;
      }
      .category-card-section {
          grid-template-columns: repeat(1, 1fr);
          width: 88%;
          gap: 10px;
      }
      .category-card {
          padding: 15px;
      }
      .category-image img {
          width: 60px;
          height: 60px;
      }
      .category-card-footer {
          flex-direction: column;
          align-items: center;
      }
      .category-btn {
          width: 100%;
          justify-content: center;
      }
      .card img {
        width: 88%;
       }
    
    }
    @media (max-width: 480px) {
       .category-text p {
        width: 200px;
        font-size: 13px;
       }
       .category-card {
        padding: 12px;
       }
       .category-section{
        padding: 0;
       }
       .row{
        flex-direction: column;
        gap: 14px;
       }
       .card img {
        width: 100%;
       }
      
    }
    
    .search-container-cat{
        
        justify-self: center;
        max-width: 600px;
        width: 90%;
        
    }
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    
    .pagination button {
        padding: 8px 16px;
        margin: 5px;
        border: none;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        border-radius: 5px;
    }
    
    .pagination button:disabled {
        background-color: #ccc;
        cursor: not-allowed;
    }
    
    .search-bar-cat {
        position: relative;
        height: 50px;
        max-width: 550px;
        align-items: center;
        font-size: 20px;
        margin: auto;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.25);
        border-radius: 25px;
       
        
    }
    .search-bar-cat input {
        position: absolute;
        height: 100%;
        width: 100%;
        font-size: 18px;
        padding: 10px 20px;
        border-radius: 25px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        border: none;
        outline: none;
    }
    .search-bar-icon{
        position: absolute;
        right: -2px;
        top: 0;
        width: 50px;
        background: #ffc107;
        height: 100%;
        text-align: center;
        line-height: 50px;
        color: #fff;
        font-size: 20px;
        border-radius: 0 25px 25px 0;
    }
    
        
    
    
    
    @media (min-width: 769px) {
        .arrow-icon {
            display: none;
        }
    }
    
    @media (max-width: 768px) {
    
        .category-container {
          flex-direction: column;
          align-items: center;
      }
        .category-filter-content {
            display: none;
        }
    
        .category-filter-content.show {
            display: block;
        }
    
        .category-filter-search {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #2c72a5;
            color: white;
            padding: 10px;
            border: none;
            width: 100%;
            cursor: pointer;
        }
    
        .arrow-icon {
            font-size: 16px;
            margin-left: 10px;
        }
    }
    
