<%- include('layout/navbar') %>
<div style="height: 5vh;">

</div>
</div>
<div class="container " style="height: 60vh;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4" style="border-radius: 10px;">
                <h2 class="text-center mb-3">Verify OTP</h2>

                <!-- OTP Verification Form -->
                <form action="/auth/verify-otp" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" value="<%= email %>" readonly required class="form-control" style="background: #e9ecef;">
                    </div>

                    <div class="mb-3">
                        <label for="otp" class="form-label">Enter OTP</label>
                        <input type="text" name="otp" required class="form-control">
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
                </form>

                <!-- Resend OTP Form -->
                <form action="/auth/resendotp" method="POST" class="text-center mt-3">
                    <input type="hidden" name="email" value="<%= email %>">
                    <button type="submit" class="btn btn-link">Resend OTP</button>
                </form>

              
                <% if (message) { %>
                    <p class="text-danger text-center mt-3"><%= message %></p>
                <% } %>
            </div>
        </div>
    </div>
</div>
<div style="height: 5vh;">

</div>
</main>
<%- include('layout/footer') %>
